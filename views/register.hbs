<!-- views/register.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Registrazione - Passave</title>
  <link href="/static/css/output.css" rel="stylesheet">
</head>
<body class="bg-base-200 min-h-screen flex items-center justify-center">
  <div class="card w-96 bg-base-100 shadow-xl p-6">
    <h1 class="text-2xl font-bold mb-4">Registrazione</h1>
    {{#if message}}
      <div class="alert alert-error shadow-lg mb-4">
        <span>{{message}}</span>
      </div>
    {{/if}}
    <form action="/register" method="post" class="flex flex-col space-y-3">
      <input type="text" name="nome" placeholder="Il tuo nome" required class="input input-bordered w-full">
      <input type="text" name="username" placeholder="Username" required class="input input-bordered w-full">
      <input type="password" name="password" placeholder="Password" required class="input input-bordered w-full">
      <button type="submit" class="btn btn-primary w-full">Crea Account</button>
    </form>
  </div>
</body>
</html>
